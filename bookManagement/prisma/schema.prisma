// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(uuid())
  username  String @unique
  password Int
}

model Books{
  id  String     @id @default(uuid())
  bookName String
  genre String
  
}

model Loan {
  id String     @id @default(uuid())
  userID String 
  bookID String

  @@index([userID])
  @@index([bookID])
}
